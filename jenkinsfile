
pipeline {
    agent any
    tools {
        maven 'maven3'
        jdk 'java-17'
    }
    triggers {
        // polls the scm every5 mins
        pollSCM ('5 * * * *')
        //builds the piepline periodcally every day 3 clock
        cron ('0 16 * * *')
    }
