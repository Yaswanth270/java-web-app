        stage('Build') {
            steps {
                bat 'mvn install'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t java-image-latest .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat 'docker run -itd --name java-container -p 8082:8080 java-image-latest'
            }
        }
